<div id="dashboard" class="dashboard glass-panel">
    <div class="stat-row">
        <span>VISITS:</span>
        <span id="stat-visits">0</span>
    </div>
    <div class="stat-row">
        <span>COINS:</span>
        <span id="stat-coins" class="gold">0</span>
    </div>
    <hr/>
    <button id="btn-shop" class="btn-small">SKIN SHOP</button>
</div>

<!-- Shop Modal -->
<div id="shop-modal" class="modal hidden">
    <div class="modal-content glass-panel">
        <h2>SELECT SKIN</h2>
        <div class="coins-display">Your Coins: <span id="shop-coins">0</span></div>
        <div id="skin-grid" class="skin-grid">
            <!-- Populated by JS -->
        </div>
        <button id="close-shop" class="btn-close">CLOSE</button>
    </div>
</div>

<script>
    const API_URL = 'http://localhost:8080/api';
    
    // estado
    let userCoins = 0;
    let ownedSkins: number[] = [];
    let currentSkin = 0;
    const skinCost = 50; // incremento base
    const skinNames = [
        "Mago", "Gato", "Rey Medieval", "Slime", "Ninja",
        "Caballero Medieval", "Mini PEKKA", "Cristiano Ronaldo", "Perro", "Fantasma"
    ];

    async function updateStats() {
        try {
            // obtener stats globales
            const resStats = await fetch(`${API_URL}/stats`);
            if (resStats.ok) {
                const data = await resStats.json();
                const visitsEl = document.getElementById('stat-visits');
                if (visitsEl) visitsEl.innerText = data.visits;
            }

            // obtener stats usuario
            const resUser = await fetch(`${API_URL}/user`);
            if (resUser.ok) {
                const data = await resUser.json();
                userCoins = data.coins;
                ownedSkins = data.owned_skins;
                currentSkin = data.current_skin;

                const coinsEl = document.getElementById('stat-coins');
                const shopCoinsEl = document.getElementById('shop-coins');
                if (coinsEl) coinsEl.innerText = userCoins.toString();
                if (shopCoinsEl) shopCoinsEl.innerText = userCoins.toString();
                
                renderShop();
            }
        } catch (e) { console.error("Backend error", e); }
    }

    function renderShop() {
        const grid = document.getElementById('skin-grid');
        if (!grid) return;
        grid.innerHTML = '';

        // 10 skins
        for(let i=0; i<10; i++) {
            const item = document.createElement('div');
            item.className = 'skin-item ' + (currentSkin === i ? 'active' : '');
            if (ownedSkins.includes(i)) item.classList.add('owned');

            // 1. nombre skin
            const nameLabel = document.createElement('span');
            nameLabel.className = 'skin-name';
            nameLabel.innerText = skinNames[i] || `Skin ${i+1}`;
            item.appendChild(nameLabel);

            // 2. preview
            const preview = document.createElement('div');
            preview.className = 'skin-preview';
            const col = i % 5;
            const row = Math.floor(i / 5);
            const xPos = col * 25;
            const yPos = row * 100;
            preview.style.backgroundPosition = `${xPos}% ${yPos}%`;
            item.appendChild(preview);

            // 3. boton accion
            const btn = document.createElement('button');
            const calculatedCost = (i + 1) * 50;
            if (currentSkin === i) {
                btn.innerText = 'EQUIPPED';
                btn.className = 'btn-equip active';
                btn.disabled = true;
            } else if (ownedSkins.includes(i)) {
                btn.innerText = 'EQUIP';
                btn.className = 'btn-equip';
                btn.onclick = () => equipSkin(i);
            } else {
                btn.innerText = `BUY $${calculatedCost}`;
                btn.className = 'buy-btn';
                if (userCoins < calculatedCost) btn.disabled = true;
                btn.onclick = () => buySkin(i);
            }
            item.appendChild(btn);
            grid.appendChild(item);
        }
    }

    async function buySkin(id: number) {
        try {
            const res = await fetch(`${API_URL}/buy_skin`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ skin_id: id })
            });
            if (res.ok) {
                await updateStats();
            } else {
                alert("Not enough coins!");
            }
        } catch(e) { console.error(e); }
    }

    async function equipSkin(id: number) {
        try {
            const res = await fetch(`${API_URL}/set_skin`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ skin_id: id })
            });
            if (res.ok) {
                await updateStats();
                document.dispatchEvent(new Event('skin-changed'));
            }
        } catch(e) { console.error(e); }
    }

    // logica modal
    const modal = document.getElementById('shop-modal');
    document.getElementById('btn-shop')?.addEventListener('click', () => {
        updateStats();
        modal?.classList.remove('hidden');
    });
    document.getElementById('close-shop')?.addEventListener('click', () => {
        modal?.classList.add('hidden');
    });

    // loops
    setInterval(updateStats, 5000); // sincro
    document.addEventListener('coin-collected', updateStats);
    document.addEventListener('game-start', updateStats);
    updateStats();
</script>

<style>
    .dashboard {
        position: fixed;
        top: 20px;
        right: 20px;
        width: 200px;
        padding: 15px;
        border-radius: 8px;
        font-family: 'Press Start 2P', cursive;
        font-size: 0.7rem;
        z-index: 100;
        color: #fff;
    }

    .glass-panel {
        background: rgba(0, 0, 0, 0.8);
        border: 2px solid #555;
        box-shadow: 4px 4px 0 #000;
    }

    .stat-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .gold { color: #ffd43b; }

    .btn-small {
        width: 100%;
        padding: 8px;
        background: #339af0;
        border: 2px solid #fff;
        color: #fff;
        font-family: inherit;
        font-size: 0.6rem;
        cursor: pointer;
    }
    
    .btn-small:hover { background: #1c7ed6; }

    /* modal */
    .modal {
        position: fixed;
        top: 0; left: 0;
        width: 100vw; height: 100vh;
        background: rgba(0,0,0,0.8);
        z-index: 2000;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .hidden { display: none; }

    .modal-content {
        width: 90%;
        max-width: 500px; /* estrecho para 2 columnas */
        max-height: 85vh;
        overflow-y: auto;
        padding: 30px;
        display: flex;
        flex-direction: column;
        gap: 30px;
        border-radius: 20px;
    }

    .skin-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* forzar 2 columnas */
        gap: 20px;
    }

    .skin-item {
        background: rgba(255, 255, 255, 0.05);
        padding: 20px;
        border: 2px solid #444;
        border-radius: 12px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        transition: all 0.2s;
        min-height: 220px;
    }
    .skin-item.owned { border-color: #ffd43b; background: rgba(255, 212, 59, 0.05); }
    .skin-item.active { border-color: #00ff41; background: rgba(0, 255, 65, 0.1); }

    .skin-name {
        font-size: 0.75rem;
        color: #ffd43b;
        text-align: center;
        font-weight: bold;
        min-height: 2em;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .skin-preview {
        width: 64px;
        height: 80px;
        background-image: url('/characters.png');
        background-size: 500% 200%;
        image-rendering: pixelated;
        border-radius: 4px;
        background-color: rgba(255, 255, 255, 0.1);
        box-shadow: inset 0 0 10px rgba(0,0,0,0.5);
    }

    .btn-equip, .buy-btn {
        width: 100%;
        padding: 8px;
        font-family: inherit;
        font-size: 0.5rem;
        cursor: pointer;
        border: 2px solid #fff;
        text-transform: uppercase;
    }

    .btn-equip { background: #4dabf7; color: #fff; }
    .btn-equip.active { background: #00ff41; border-color: #000; color: #000; }
    .buy-btn { background: #ff6b6b; color: #fff; }
    .buy-btn:disabled { background: #555; cursor: not-allowed; opacity: 0.5; }

    .btn-close {
        margin-top: 20px;
        padding: 12px;
        background: #ff6b6b;
        border: 2px solid #fff;
        color: white;
        font-family: inherit;
        cursor: pointer;
        font-size: 0.7rem;
    }
</style>
